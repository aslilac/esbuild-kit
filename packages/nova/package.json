{
	"name": "nova-build",
	"version": "0.1.0",
	"author": "McKayla Washburn <mckayla@hey.com>",
	"description": "Fast, opinionated build system for UI libraries",
	"keywords": [
		"esbuild"
	],
	"license": "MIT",
	"homepage": "https://github.com/aslilac/nova",
	"repository": "https://github.com/aslilac/nova",
	"bugs": "https://github.com/aslilac/nova/issues",
	"type": "module",
	"exports": {
		"./@types/global": {
			"types": "./@types/global.d.ts"
		}
	},
	"bin": {
		"nova": "./target/nova.js",
		"nova-storybook": "./target/nova-storybook.js"
	},
	"files": [
		"target/**"
	],
	"dependencies": {
		"@svgr/core": "^6.0.0",
		"esbuild": "^0.14.6",
		"sass": "^1.43.4",
		"postcss": "^8.4.3",
		"postcss-modules": "^4.2.2",
		"succulent": "^0.14.0"
	},
	"devDependencies": {
		"@types/jest": "^27.0.3",
		"@types/node": "^16.11.10",
		"@types/sass": "^1.43.1",
		"@types/svgo": "^2.6.0",
		"jest": "^27.3.1",
		"ts-jest": "^27.0.7"
	},
	"scripts": {
		"build": "tsc -p .",
		"dev": "tsc -p . -w --preserveWatchOutput",
		"prepare": "npm run build",
		"lint": "eslint .",
		"test": "jest"
	}
}
